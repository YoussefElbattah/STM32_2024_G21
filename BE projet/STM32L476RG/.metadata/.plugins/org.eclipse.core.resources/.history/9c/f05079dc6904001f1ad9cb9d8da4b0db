/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
/* USER CODE BEGIN MX_GPIO_Init_1 */
/* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LD2_Pin */
  GPIO_InitStruct.Pin = LD2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LD2_GPIO_Port, &GPIO_InitStruct);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void lora_init(void){
	char command1[] = "AT+MODE=TEST\r\n" ;
	char response[1000] = "";
	HAL_UART_Transmit(&huart1, (uint8_t*)command1, strlen(command1), 1000);
	HAL_UART_Receive(&huart1, (uint8_t*)response, sizeof(response), 1000);
	HAL_UART_Transmit(&huart2, (uint8_t*)response, strlen(response), 1000);
}

void lora_receive(char *response){
	char command2[] = "AT+TEST=RXLRPKT," ;
	HAL_UART_Transmit(&huart1, (uint8_t*)command2, strlen(command2), 1000);
	HAL_UART_Receive(&huart1, (uint8_t*)response, sizeof(response), 1000);
	HAL_UART_Transmit(&huart2, (uint8_t*)response, strlen(response), 1000);

}

void trame_decode(char *data,char *trame_decode){
	int i = 0;
	int j = 0;
	while(data[i] != '\"'){
		if(data[i] == '\"'){
			i++;
			while(data[i] != '\"'){
				trame_decode[j] = data[i];
				i++;
			}
			break;
		}
		i++;
	}
}

void data_decode(char *trame_decode, data *data_decode){
	snprintf(data_decode->acc_x, 4, "%c%c%c",(trame_decode[0] == 2) ? '+' : '-',
											  trame_decode[1],
											  trame_decode[2]);

	snprintf(data_decode->acc_y, 4, "%c%c%c",(trame_decode[3] == 2) ? '+' : '-',
											  trame_decode[4],
											  trame_decode[5]);

	snprintf(data_decode->acc_z, 4, "%c%c%c",(trame_decode[6] == 2) ? '+' : '-',
											  trame_decode[7],
											  trame_decode[8]);

	snprintf(data_decode->temperature, 7, "%c%c%c,%c%c",(trame_decode[9] == 2) ? '+' : '-',
											  trame_decode[10],
											  trame_decode[11],
										   	  trame_decode[12],
											  trame_decode[13]);

	snprintf(data_decode->humidity, 6, "%c%c,%c%c",trame_decode[14],
											  trame_decode[15],
											  trame_decode[16],
											  trame_decode[17]);

	snprintf(data_decode->pressure, 7, "%c%c%c,%c%c",trame_decode[18],
											  trame_decode[19],
											  trame_decode[20],
											  trame_decode[21],
											  trame_decode[22]);

}

void display_serial_data(data data_display){
	char data_out[256];
	snprintf(data_out, 256, "acc_x : %s | acc_y : %s | acc_z : %s /ntemperature : %s degC /nhumidity : %s %% /npressure = %s hPa /n"
												  ,data_display.acc_x,
												  data_display.acc_y,
												  data_display.acc_z,
												  data_display.temperature,
												  data_display.humidity,
												  data_display.pressure);
	HAL_UART_Transmit(&huart2, (uint8_t*)data_out, 256, 1000);
}
/* USER CODE END 4 */

